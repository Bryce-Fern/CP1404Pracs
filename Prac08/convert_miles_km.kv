BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 64
            size_hint_x: 3
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                font_size: 48
                on_press: app.increase_decrease(+1)
            Button:
                text: 'Down'
                font_size: 48
                on_press: app.increase_decrease(-1)
    Button:
        text: 'Convert m to km'
        font_size: 48
        on_press: app.handle_convert(input_number.text)
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)